<%- include("../partials/header") %>
<%- include("../partials/sidebar") %>


<div class="content" id="content">
  <h1>Titles</h1>
  <a class="btn btn-add" href="/admin/titles/add">+ Add</a>

  <% if (titles && titles.length > 0) { %>
    <div class="skills-container">
      <% titles.forEach(title => { %>
        <div class="skill-item" data-title-id="<%= title.id %>">
          <div class="skill-header">
            <span class="skill-title"><%= title.title %></span>
          </div>
          <div class="skill-actions">
            <a href="/admin/titles/edit/<%=title.id%>" class="btn btn-edit")">Edit</a>
            <form action="/admin/titles/delete/<%= title.id %>" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this skill?');">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p style="color:#bbb;">No title added yet.</p>
  <% } %>

</div>

<%- include("../partials/footer") %>
