<%- include("../partials/header") %>
<%- include("../partials/sidebar") %>

<div class="content" id="content">
  <h1>Edit Education</h1>

  <form action="/admin/education/update/<%= education.id %>" method="POST">
    
    <div class="form-group">
      <label>Education Name</label>
      <input
        type="text"
        name="educationName"
        value="<%= education.educationName %>"
        required
      >
    </div>

    <div class="form-group">
      <label>Description</label>
      <textarea name="description" rows="4"><%= education.description %></textarea>
    </div>

    <div class="form-group">
      <label>Degree</label>
      <input
        type="text"
        name="degree"
        value="<%= education.degree %>"
      >
    </div>

    <%
    const startDate = education.startDate
        ? new Date(education.startDate).toISOString().split('T')[0]
        : '';

    const endDate = education.endDate
        ? new Date(education.endDate).toISOString().split('T')[0]
        : '';
    %>

    <div class="form-group">
    <label>Start Date</label>
    <input
        type="date"
        name="startDate"
        value="<%= startDate %>"
        required
    >
    </div>

    <div class="form-group">
    <label>End Date</label>
    <input
        type="date"
        name="endDate"
        value="<%= endDate %>"
    >
    </div>


    <button type="submit" class="btn-edit">Save Changes</button>
  </form>

  <form
    action="/admin/education/delete/<%= education.id %>"
    method="POST"
    style="margin-top: 1rem;"
  >
    <button type="submit" class="btn-delete">Delete Education</button>
  </form>
</div>

<%- include("../partials/footer") %>
