<%- include("partials/header") %>
<link rel="stylesheet" href="/admin/css/settings.css">
<%- include("partials/sidebar") %>

  <!-- Content -->
  <div class="content">
    <h1>Settings</h1>

    <form action="/admin/settings/update" method="POST">

      <input type="hidden" name="settings_id" value="<%=settings.id%>">
      <!-- Setting 1 -->
      <div class="setting-item">
        <label for="maintenance">Enable Site Maintenance</label>

        <label class="toggle-switch">
          <input type="checkbox" id="maintenance" name="maintenance_enabled" <%if(settings.maintanence_enabled){%>checked<%}%>>
          <span class="slider"></span>
        </label>
      </div>

      <!-- Setting 2 -->
      <div class="setting-item">
        <label for="show_phone">Enable Contact Form</label>

        <label class="toggle-switch">
          <input type="checkbox" id="show_phone" name="allow_contact" <%if(settings.allow_contact) {%>checked<%}%>>
          <span class="slider"></span>
        </label>
      </div>

      <button type="submit">Save Settings</button>
    </form>
  </div>

<%- include("partials/footer") %>